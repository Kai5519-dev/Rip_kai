-- Roblox Lag Reducer (Local Script)
for _, v in pairs(game.Lighting:GetChildren()) do
    if v:IsA("BlurEffect") or v:IsA("SunRaysEffect") or v:IsA("ColorCorrectionEffect") then
        v.Enabled = false
    end
end

game.Lighting.GlobalShadows = false
game.Lighting.FogEnd = 100000
game.Lighting.Brightness = 1

local function optimize(part)
    if part:IsA("BasePart") then
        part.Material = Enum.Material.SmoothPlastic
        part.Reflectance = 0
    end
end

for _, obj in pairs(workspace:GetDescendants()) do
    optimize(obj)
end

workspace.DescendantAdded:Connect(optimize) -- Tăng chất lượng ánh sáng và hiệu ứng
local Lighting = game:GetService("Lighting")

Lighting.GlobalShadows = true
Lighting.EnvironmentDiffuseScale = 1
Lighting.EnvironmentSpecularScale = 1
Lighting.Brightness = 3
Lighting.ClockTime = 14
Lighting.ExposureCompensation = 0.25
Lighting.FogStart = 100
Lighting.FogEnd = 1000
Lighting.FogColor = Color3.fromRGB(200, 200, 200)

-- Sử dụng hiệu ứng ánh sáng nâng cao nếu có Future Lighting
if settings().Rendering.QualityLevel >= Enum.QualityLevel.Level10 then
    Lighting.Technology = Enum.Technology.Future
end local atmosphere = Instance.new("Atmosphere", Lighting)
atmosphere.Density = 0.3
atmosphere.Haze = 1
atmosphere.Glare = 1

local bloom = Instance.new("BloomEffect", Lighting)
bloom.Intensity = 0.6
bloom.Size = 24

local colorCorrection = Instance.new("ColorCorrectionEffect", Lighting)
colorCorrection.TintColor = Color3.fromRGB(255, 240, 220)
colorCorrection.Saturation = 0.1
colorCorrection.Contrast = 0.05 -- Anti-ban cơ bản (ẩn GG và xóa dấu vết)
